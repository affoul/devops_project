<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.hiarflow.controller.LoginController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Zone logo à gauche -->
    <left>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #e3f2fd; -fx-padding: 30;">
            <ImageView fx:id="logoImage" fitHeight="180" fitWidth="180">
                <image>
                    <Image url="@images/logo.jpg"/>
                </image>
            </ImageView>
            <Label text="Bienvenue chez HairBooker"
                   style="-fx-font-size: 20px; -fx-text-fill: #1565c0; -fx-font-weight: bold;"/>
        </VBox>
    </left>

    <!-- Zone centrale avec formulaire -->
    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 50; -fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

            <!-- Message de bienvenue et de consigne -->
            <Label text="Espace de connexion réservé aux coiffeurs"
                   style="-fx-text-fill: #1976d2; -fx-font-size: 14px;"/>
            <Label text="Veuillez entrer vos identifiants pour continuer"
                   style="-fx-text-fill: #424242; -fx-font-size: 12px;"/>

            <Label text="Connexion Coiffeur"
                   style="-fx-font-size: 26px; -fx-text-fill: #1565c0; -fx-font-weight: bold;"/>

            <TextField fx:id="nomField" promptText="Entrez votre nom complet"
                       style="-fx-pref-width: 250; -fx-background-radius: 10;"/>
            <PasswordField fx:id="motDePasseField" promptText="Entrez votre mot de passe"
                           style="-fx-pref-width: 250; -fx-background-radius: 10;"/>

            <Button fx:id="loginButton" text="Se connecter"
                    style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20;"
                    onAction="#handleLogin"/>

            <Label fx:id="messageLabel" textFill="red" style="-fx-font-size: 12px;"/>
        </VBox>
    </center>

    <!-- Pied de page -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10;">
            <Label text="© 2025 HairBooker - Tous droits réservés"
                   style="-fx-text-fill: #9e9e9e; -fx-font-size: 11px;"/>
        </HBox>
    </bottom>
</BorderPane>
